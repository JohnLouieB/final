@model Icarus.Models.tblFacilityReport

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Create Facility Reports</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.ReportDate, htmlAttributes: new { @class = "control-label col-md-2" })

                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ReportDate, new { @type = "datetime-local", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ReportDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.PostedBy, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PostedBy, new { htmlAttributes = new { @class = "form-control", @Value = Session["Username"], disabled = true } })
                        @Html.ValidationMessageFor(model => model.PostedBy, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.Activity, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Activity, new { @class = "form-control", @rows = 5 })
                        @Html.ValidationMessageFor(model => model.Activity, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col text-center">
                    <a class="btn btn-warning btn-sm" href="/FacilityReports">Go back</a>
                    <input type="submit" value="Create" class="btn btn-sm btn-primary" />
                </div>
            </div>
        </div>
    </div>
    }
</div>
<script>
    $(document).ready(function () {
        document.title = 'Create Resident';
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
