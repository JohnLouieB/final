@model IEnumerable<Icarus.Models.tblFacilityReport>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
</style>
<script>
    function Delete(id) {
        $("#id").val(id);
        $('#myModal').modal().show();
    }
    $(document).ready(function () {
        document.title = 'Facility Reports';
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

<div class="pl-5 pr-5">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        @if (Session["isPG"].ToString() == "Y" || Session["isADG"].ToString() == "Y")
        {
            <div>
                <a class="btn" style="background-color:#4E58A2;color:white;" href="/FacilityReports/Create">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <span>&nbsp;Add Facility Report</span>
                </a>
            </div>
        }
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless" style="overflow-x: inherit;">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        ID
                    </th>
                    <th scope="col" width="12%">
                        @Html.DisplayNameFor(model => model.ReportDate)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Activity)
                    </th>
                    @if (Session["isPG"].ToString() == "Y" || Session["isADG"].ToString() == "Y")
                    {
                        <th scope="col"> @Html.DisplayNameFor(model => model.PostedBy)</th>
                        <th class="tableheadright text-center" scope="col">Action</th>
                    }
                    else
                    {
                        <th class="tableheadright" scope="col"> @Html.DisplayNameFor(model => model.PostedBy)</th>
                    }
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.IDFacilityReport)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReportDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostedBy)
                        </td>
                        @if (Session["isPG"].ToString() == "Y" || Session["isADG"].ToString() == "Y")
                        {

                            <td style="display:flex;">
                                <a class="btn btn-warning btn-sm mr-1" href="/FacilityReports/Edit/@item.IDFacilityReport">Edit</a>
                                @if (Session["isADG"].ToString() == "Y")
                                {
                                    <button class="btn btn-danger btn-sm ml-1" type="button" onclick="Delete(@item.IDFacilityReport)">Delete</button>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Facility Report?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                    @using (Html.BeginForm("Delete", "FacilityReports", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="number" class="id" id="id" style="display:none;" name="id" value="" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>