@model IEnumerable<Icarus.Models.vExpensesBrowse>


@{
    ViewBag.Title = "Expense Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        document.title = 'Expenses Browse';

        $("#searchInput1").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#rowTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $('table').on('scroll', function () {
            $("table > *").width($("table").width() + $("table").scrollLeft());
        });
    });
</script>

<style>
    .table-holder::-webkit-scrollbar {
        width: 12px; /* width of the entire scrollbar */
        background-color: #dddddd;
        height: 10px;
    }

    .table-holder::-webkit-scrollbar-track {
        background: #dddddd !important; /* color of the tracking area */
    }

    .table-holder::-webkit-scrollbar-thumb {
        background: #808080 !important; /* color of the scroll thumb */
        border-radius: 20px; /* roundness of the scroll thumb */
        border: 3px solid grey !important; /* creates padding around scroll thumb */
    }
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }


    .tableheadright {
        border-top-right-radius: 15px !important;
    }

    thead {
        position: sticky;
        top:0;
    }

    thead, tbody {
        display: block;
    }

    tbody {
        overflow-y: hidden;
        overflow-x: hidden;
    }

    td, th {
        min-width: 120px;
        height: 25px;
        border: dashed 1px lightblue;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100px;
    }

    html, body {
        margin: 0;
        height: 100%;
        overflow: hidden
    }

    table thead tr th:first-child {
        border-top-left-radius: 15px !important;
    }
    table thead tr th:last-child {
        border-top-right-radius: 15px !important;
    }
</style>
<div class="pl-5 pr-5 holder" style="height:100vh;">
    <div id="formSearch" class="row" style="height:5%;">
        <div class="col col-sm-3">
            <input id="searchInput1" name="search" class="form-control" placeholder="Search String" aria-label="Search" aria-describedby="search-addon" />
        </div>
        <div class="col-sm-6">
            @using (Html.BeginForm("Index", "Expenses", FormMethod.Get))
            {
                @Html.AntiForgeryToken()

                <div class="d-flex pl-0 pr-0">
                    <input type="datetime-local" id="dateFrom" name="start" class="form-control">
                    <input type="datetime-local" id="dateTo" name="end" class="form-control">
                    <span><button type="submit" name="submit" class="btn ml-1" style="background-color:#4E58A2;color:white;">Search</button></span>
                </div>
            }
        </div>
        <div class="col-sm-3">
            <div class="pull-right">
                <a class="btn" style="background-color:#4E58A2;color:white;" href="/Expenses/Create">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <span>&nbsp;Add Expenses</span>
                </a>
                <button style="background-color:#4E58A2;" type="button" class="btn btn-primary">Verified</button>
            </div>
        </div>
    </div>
    <hr />
    <div id="tableForm" class="table-holder" style="width:100%;overflow-x:scroll;height:77%">
        <table id="example" class="table table-striped table-hover table-borderless" style="width:inherit;height:500px;">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        ID Expense
                    </th>
                    <th scope="col">
                        ExpenseDate
                    </th>
                    <th scope="col">
                        Date Posted
                    </th>
                    <th scope="col">
                        OR Number
                    </th>
                    <th scope="col">
                        Vendor
                    </th>
                    <th scope="col">
                        TIN
                    </th>
                    <th scope="col">
                        Particulars
                    </th>
                    <th scope="col">
                        Account
                    </th>
                    <th scope="col">
                        EncodedBy
                    </th>
                    <th scope="col">
                        Amount
                    </th>
                    <th scope="col">
                        AmountCharged
                    </th>
                    <th scope="col">
                        W/ Receipt
                    </th>
                    <th scope="col">
                        Codep
                    </th>
                    <th scope="col">
                        Verified
                    </th>
                    <th class="tableheadright text-center" scope="col">Action</th>
                </tr>
            </thead>
            <tbody id="rowTable">
                @foreach (var item in Model)
                {
                    var id = item.IDExpense;

                    <tr id="item">
                        <td scope="row">
                            <span onClick="window.location='/Expenses/Details/@item.IDExpense'" style="color:blue;text-decoration: underline;cursor:pointer;">@item.IDExpense</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpenseDate)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DatePosted)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ORNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Vendor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TIN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Particulars)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Account)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EncodedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChargeToCodep)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WithReceipt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChargedToCodep)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsVerified)
                        </td>
                        <td>
                            <center>
                                <a class="btn btn-sm btn-warning" href="/Expenses/Edit/@item.IDExpense">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/Expenses/Delete/@item.IDExpense">Delete</a>
                            </center>

                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


