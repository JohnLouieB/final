@model IEnumerable<Icarus.Models.tblVendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var models = new Icarus.Models.tblVendor();
}

<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
</style>

<script>

    function Delete(id) {
        $("#id").val(id);
        $('#myModal').modal().show();
    }

    function Create() {
        $("#createModal").modal().show();
    }

    $(document).ready(function () {
        document.title = "Vendors Browse";

        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

    });
</script>

<div class="pl-5 pr-5">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        @if (Session["isADG"].ToString() == "Y" || Session["isAAG"].ToString() == "Y")
        {
            <div>
                <a class="btn" style="background-color:#4E58A2;color:white;" href="/Vendors/Create">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <span>&nbsp;Add Vendors</span>
                </a>
            </div>
        }
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless" style="overflow-x: inherit;">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        @Html.DisplayNameFor(model => model.IDVendor)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Vendor)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ContactNumber)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ContactPerson)
                    </th>
                    <th scope="col" width="8%">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="col" width="10%">
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    @if (Session["isAAG"].ToString() != "Y" && Session["isADG"].ToString() != "Y")
                    {
                        <th class="tableheadright" scope="col" width="10%">
                            @Html.DisplayNameFor(model => model.TIN)
                        </th>
                    }
                    else
                    {
                        <th scope="col" width="10%">
                            @Html.DisplayNameFor(model => model.TIN)
                        </th>
                        <th scope="col" class="tableheadright">
                            Actions
                        </th>
                    }
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    var nextActionParam = @Html.Raw(Json.Encode(Model));
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDVendor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactPerson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TIN)
                        </td>
                        @if (Session["isAAG"].ToString() == "Y" || Session["isADG"].ToString() == "Y")
                        {
                            <td style="display:flex;">
                                <a class="btn btn-warning btn-sm mr-1" href="/Vendors/Edit/@item.IDVendor">Edit</a>
                                @if (Session["isADG"].ToString() == "Y")
                                {
                                    <button class="btn btn-danger btn-sm ml-1 delete" id="delete" value="@item.IDVendor" onclick="Delete(@item.IDVendor)">Delete</button>
                                }
                            </td>
                        }
                                                                    
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Vendor?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
                    @using (Html.BeginForm("Delete", "Vendors", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input type="number" class="id" id="id" style="display:none;" name="id" value="" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="gridSystemModalLabel">Create Vendor</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                @using (Html.BeginForm("Create", "Vendors", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @*@Html.HiddenFor(model => models.IDVendor)*@
                    <form>
                        <div class="modal-body">
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label><b>Vendor</b></label>
                                    @Html.EditorFor(model => models.Vendor, new { htmlAttributes = new { @class = "form-control vendor" } })
                                </div>
                                <div class="form-group col-sm-4">
                                    <label><b>Contact Person</b></label>
                                    @Html.EditorFor(model => models.ContactPerson, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="form-group col-sm-4">
                                    <label><b>Contact Number</b></label>
                                    @Html.EditorFor(model => models.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    <label><b>Email</b></label>
                                    @Html.EditorFor(model => models.Email, new { htmlAttributes = new { @class = "form-control", Type="email" } })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => models.TIN)
                                    @Html.EditorFor(model => models.TIN, new { htmlAttributes = new { @type = "number", @class = "form-control price" } })
                                </div>
                                <div class="form-group col-sm-4">
                                    <label><b>Is Active</b></label>
                                    @Html.DropDownListFor(model => models.IsActive,
                                (
                                    new[] { new SelectListItem { Text = "N", Value = "N" },
                                    new SelectListItem { Text = "Y", Value = "Y" }
                                }),
                                new { @class = "form-control stopTF" })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => models.Notes)
                                    @Html.TextAreaFor(model => models.Notes, new { @class = "form-control", @rows = 5 })
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                }

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
