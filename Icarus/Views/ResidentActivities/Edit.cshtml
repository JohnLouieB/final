@model Icarus.Models.tblResidentActivity

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2>Edit </h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDResidentActivityLog)
        @Html.HiddenFor(model => model.PostedBy)

        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.LogDate, htmlAttributes: new { @class = "control-label col-md-2" })

                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LogDate, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control logDate" } })
                        @Html.ValidationMessageFor(model => model.LogDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.IDAdmission, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IDAdmission, (SelectList)ViewBag.residentList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDAdmission, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Position, ViewBag.ranks as SelectList, new { @class = "form-control", Value = Model.Position, Selected = Model.Position })
                        @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.PostedBy, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PostedBy, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                        @Html.ValidationMessageFor(model => model.PostedBy, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.Activity, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col">
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Activity, new { @class = "form-control", @rows = 5 })
                        @Html.ValidationMessageFor(model => model.Activity, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col text-center">
                    <a class="btn btn-warning btn-sm" href="/ResidentActivities">Go back to List</a>
                    <button type="submit" value="Save" class="btn btn-sm btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
    }
</div>
<script>
    $(document).ready(function () {
        document.title = "Edit Resident Activity";
        $('.logDate').val(new Date('@Model.LogDate').toLocaleString("sv-SE", {
            year: "numeric",
            month: "2-digit",
            day: "2-digit",
            hour: "2-digit",
            minute: "2-digit",
            second: "2-digit"
        }).replace(" ", "T"));
    });
</script>

