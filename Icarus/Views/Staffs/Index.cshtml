@model IEnumerable<Icarus.Models.tblStaff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pl-5 pr-5">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        <div>
            <a class="btn" style="background-color:#4E58A2;color:white;" href="/Staffs/Create">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>&nbsp;Add Staff</span>
            </a>
        </div>
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        @Html.DisplayNameFor(model => model.Lastname)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Firstname)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateHired)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.DateTerminated)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th class="tableheadright text-center" scope="col">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">
                            @Html.ActionLink(
                                linkText: item.Lastname.ToString(),
                                actionName: "Details",
                                controllerName: "Staffs",
                                routeValues: new { id = item.IDStaff },
                                htmlAttributes: null
                            )
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Firstname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateHired)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTerminated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            <center>
                                <a class="btn btn-sm btn-warning" href="/Staffs/Edit/@item.IDStaff">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/Staffs/Delete/@item.IDStaff">Delete</a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
</style>
<script>
    $(document).ready(function () {
        document.title = 'Staffs Browse';
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
