@model Icarus.Models.AdmissionNew

@{
    ViewBag.Title = "Admission Browse";
}

<div class="col-sm-12 pt-3 container-fluid" style="border-right: 2px solid grey;height:auto;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form p-0 m-0">
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            ID Admission
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input type="number" class="form-control" id="idadmission" value="@Model.adm.IDAdmission" disabled>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            ID Resident
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input type="number" class="form-control" id="idresident" value="@Model.adm.IDResident" disabled>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Admission Date
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input type="datetime-local" class="form-control admissionDate" id="idadmisdate" value="@Model.adm.AdmissionDate.ToString("yyyy-MM-dd HH:mm:ss").Replace(' ', 'T')">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Termination Date
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input type="datetime-local" class="form-control termdate" id="idtermdate">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Active
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    @Html.DropDownListFor(modelItem => modelItem.adm.IsActive,
                        (
                            new[] { new SelectListItem { Text = "Y", Value = "Y" },
                            new SelectListItem { Text = "N", Value = "N" }
                        }),
                        new { @class = "form-control active", Value = Model.adm.IsActive, Text = Model.adm.IsActive, Selected = true })
                </div>
            </div>
        </div>
        <div class="p-1"></div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Stop T.F Fee?
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    @Html.DropDownListFor(modelItem => modelItem.adm.StopTFBilling,
                        (
                            new[] { new SelectListItem { Text = "Y", Value = "Y" },
                            new SelectListItem { Text = "N", Value = "N" }
                        }),
                        new { @class = "form-control stopTF", Value= Model.adm.StopTFBilling, Text = Model.adm.StopTFBilling, Selected = true })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Phase
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    @Html.DropDownListFor(modelItem => modelItem.adm.Phase,
                        (
                            new[] { new SelectListItem { Text = "N", Value = "N" },
                            new SelectListItem { Text = "Senior", Value = "Senior" },
                            new SelectListItem { Text = "Intensive", Value = "Intensive" },
                            new SelectListItem { Text = "Re-Entry", Value = "Re-Entry"},
                            new SelectListItem { Text = "Graduate", Value = "Graduate"},
                            new SelectListItem { Text = "Pullout", Value = "Pullout"},
                        }),
                        new { @class = "form-control phase", Value = Model.adm.Phase, Selected = true, Text = Model.adm.Phase }
                    )
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Rank
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    @Html.DropDownListFor(model => model.adm.IDRank, ViewBag.ranks as SelectList, new { @class="form-control", Value = Model.adm.IDRank, Selected=Model.adm.IDRank })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Notes
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    @Html.TextAreaFor(
                        model => model.adm.Notes,
                        new { @class = "form-control notes", Value = Model.adm.Notes }
                    )
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Treatment Fee
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input class="form-control treatmentFee" value="@Model.adm.TreatmentFee" type="number" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Total Billing
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input class="form-control totalBilling" value="@Model.adm.TotalBilling" type="number" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Total Paid
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input class="form-control totalPaid" value="@Model.adm.TotalPaid" type="number" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col col-sm-4 my-auto">
                    <p class="my-auto">
                        <b>
                            Overall Balance
                        </b>
                    </p>
                </div>
                <div class="col col-sm-8">
                    <input class="form-control overAllBalance" value="@Model.adm.OverallBalance" type="number" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row pull-right mb-3">
                <a class="btn btn-sm btn-warning mr-2" href="javascript:history.back()">Go back</a>
                <input class="btn btn-sm btn-primary mr-4" type="submit" value="Update" />
            </div>
        </div>

    </div>
    }
</div>
<style>
    .vertical-align {
        padding: 0;
    }
</style>
