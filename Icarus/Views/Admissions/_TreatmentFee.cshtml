@model Icarus.Models.AdmissionBillingNew

@{
    ViewBag.Title = "Admission Browse";
    var localDateTime = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss").Replace(' ', 'T');
}


<div class="col-sm-12 pl-0 pr-0">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        @if (!Model.admBillingList.Any() || Model.admBillingList == null) {

        }
        else {
        <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        }
        <div>
            <button class="btn" style="background-color:#4E58A2;color:white;" data-toggle="modal" data-target="#treatmentfeeModal">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>&nbsp;Add Admission Bill</span>
            </button>
        </div>
    </div>
    <hr>
    @if (!Model.admBillingList.Any() || Model.admBillingList == null)
    {
        <div>No Treatment fee record yet.</div>
    }
    else
    {
        <table class="table table-striped table-hover table-borderless">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft" scope="col">
                        ID AB
                    </th>
                    <th scope="col">
                        Billing Date
                    </th>
                    <th scope="col">
                        Generated Date
                    </th>
                    <th scope="col">
                        Amount
                    </th>
                    <th scope="col">
                        Notes
                    </th>
                    <th class="tableheadright" scope="col">
                        Generated By
                    </th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model.admBillingList)
                {
                    <tr>
                        <td>@item.IDAdmissionBilling</td>
                        <td>@item.BillingDate</td>
                        <td>@item.GeneratedDate</td>
                        <td>@item.Amount</td>
                        <td>@item.Notes</td>
                        <td>@item.GeneratedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="modal fade" id="treatmentfeeModal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="gridSystemModalLabel">Add Admission Bill</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form">
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.admBilling.IDAdmission)
                                    @Html.EditorFor(model => model.admBilling.IDAdmission, new { htmlAttributes = new { @class = "form-control", Value = Model.admissionData.IDAdmission, disabled = true } })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.admBilling.GeneratedBy)
                                    @Html.EditorFor(model => model.admBilling.GeneratedBy, new { htmlAttributes = new { @type = "text", @class = "form-control", @Value = Session["Username"], disabled = true } })

                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.admBilling.GeneratedDate)
                                    @Html.TextBoxFor(model => model.admBilling.BillingDate, new { @type = "datetime-local", @class = "form-control datetimepicker", @Value = localDateTime, disabled = true })
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.admBilling.Amount)
                                    @Html.EditorFor(model => model.admBilling.Amount, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.admBilling.BillingDate)
                                    @Html.TextBoxFor(model => model.admBilling.BillingDate, new { @type = "datetime-local", @class = "form-control datetimepicker" })
                                </div>
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.admBilling.PostedDate)
                                    @Html.TextBoxFor(model => model.admBilling.PostedDate, new { @type = "datetime-local", @class = "form-control datetimepicker", @Value = localDateTime })
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-4">
                                    @Html.LabelFor(model => model.admBilling.Notes)
                                    @Html.TextAreaFor(model => model.admBilling.Notes, new { @class = "form-control", @rows = 5 })
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Add</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
</style>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
