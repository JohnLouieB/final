@model IEnumerable<Icarus.Models.tblAdmissionCommLog>

@{
    ViewBag.Title = "Admission Browse";
}


<div class="col-sm-12 pl-3 pr-3">
    <div class="d-flex mb-2 mt-2 justify-content-between">
        <input class="form-control col-sm-4" id="myInput" type="search" style="visibility:hidden;" placeholder="Search" aria-label="Search">
        <div>
            <a class="btn" style="background-color:#4E58A2;color:white;" href="">
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <span>&nbsp;Add CommLog</span>
            </a>
        </div>
    </div>
    <hr>
    @if (!Model.Any() || Model == null)
    {
        <div>No CommLog Records yet</div>
    }
    else
    {
        <table class="table table-striped table-hover table-borderless assertionTable">
            <thead style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th class="tableheadleft col-sm-3" scope="col">
                        ID
                    </th>
                    <th scope="col">
                        Log Date
                    </th>
                    <th scope="col">
                        Details
                    </th>
                    <th class="tableheadright" scope="col">
                        Posted By
                    </th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IDAdmissionCommLog</td>
                        <td>@item.LogDate</td>
                        <td>@item.Details</td>
                        <td>@item.PostedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

<style>
    .assertionTable {
        table-layout: fixed;
        width: 100%;
    }

    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
</style>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>



