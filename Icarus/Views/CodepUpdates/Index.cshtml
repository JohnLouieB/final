@model IEnumerable<Icarus.Models.vselCodepUpdateBrowse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .tableheadleft {
        border-top-left-radius: 15px !important;
    }

    .tableheadright {
        border-top-right-radius: 15px !important;
    }
</style>
<script>
    $(document).ready(function () {
        document.title = 'Codep Updates Browse';

        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<div class="pl-5 pr-5">
    <div class="d-flex mb-2 mt-2 justify-content-between sticky">
        <input class="form-control col-sm-4" id="myInput" type="search" placeholder="Search" aria-label="Search">
        @if (Session["isADG"].ToString() == "Y" || Session["isEDG"].ToString() == "Y" || Session["isPG"].ToString() == "Y")
        {
            <div>
                <a class="btn" style="background-color:#4E58A2;color:white;" href="/CodepUpdates/Create">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <span>&nbsp;Add Update</span>
                </a>
            </div>
        }
    </div>
    <hr>
    <div>
        <table class="table table-striped table-hover table-borderless">
            <thead class="head" style="background-color: #6C7AE0; color: white;">
                <tr>
                    <th scope="col" class="tableheadleft">ID</th>
                    <th scope="col" width="13%">Date Update</th>
                    <th scope="col" width="13%">Date Log</th>
                    <th scope="col">UpdateType</th>
                    <th scope="col">UpdatedBy</th>
                    <th scope="col">Update Summary</th>
                    <th scope="col" width="5%">IDAdmission</th>
                    <th scope="col" width="15%">Resident</th>
                    <th scope="col" class="tableheadright text-center" width="10%">Action</th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row" style="text-decoration:underline;">
                            @Html.ActionLink(
                                linkText: item.IDUpdate.ToString(),
                                actionName: "Details",
                                controllerName: "CodepUpdates",
                                routeValues: new { id = item.IDUpdate },
                                htmlAttributes: null
                            )
                        </td>
                        <td>@item.DateUpdate</td>
                        <td>@item.DateLog</td>
                        <td>@item.UpdateType</td>
                        <td>@item.UpdatedBy</td>
                        <td>@item.UpdateSummary</td>
                        <td>@item.IDAdmission</td>
                        <td>@item.Resident</td>
                        <td>
                            <center>
                                <a class="btn btn-sm btn-warning" href="/CodepUpdates/Edit/@item.IDUpdate">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/CodepUpdates/Delete/@item.IDUpdate">Delete</a>
                            </center>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

